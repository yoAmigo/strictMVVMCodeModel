<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="300">
    <Window.DataContext>
        <local:DialogViewModel/>
    </Window.DataContext>
    <i:Interaction.Triggers>
        <local:MessengerEventTrigger SourceObject="{Binding MyMessenger}">
            <local:MessengerAction />
        </local:MessengerEventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Button x:Name="cancelCmd" Content="Button" HorizontalAlignment="Left" Margin="10,235,0,0" VerticalAlignment="Top" Width="75" Command="{Binding MyButtonCommand, Mode=OneWay}" CommandParameter="{Binding Name, RelativeSource={RelativeSource Self}}"/>
        <Button x:Name="confirmCmd" Content="Button" HorizontalAlignment="Left" Margin="209,235,0,0" VerticalAlignment="Top" Width="75" Command="{Binding MyButtonCommand, Mode=OneWay}" CommandParameter="{Binding Name, RelativeSource={RelativeSource Self}}"/>

    </Grid>
</Window>
